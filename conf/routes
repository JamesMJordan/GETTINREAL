# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.auth.Messages.index
GET     /banners                    controllers.auth.Messages.banners
GET     /businesscards              controllers.auth.Messages.businesscards
GET     /checkout                   controllers.auth.Messages.checkout
POST    /checkout                   controllers.auth.Messages.saveCheckout

GET     /login                      controllers.auth.Messages.login
POST    /login                      controllers.auth.Messages.registration

GET     /order                      controllers.FormController.order
GET     /submit                     controllers.auth.Messages.submit
GET     /testpage                   controllers.auth.Messages.testpage

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

